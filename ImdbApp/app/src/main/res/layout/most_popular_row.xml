<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtReleaseDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtFilmName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/poster"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Released on :"
        android:id="@+id/txtReleaseDate"
        android:layout_below="@+id/txtFilmName"
        android:layout_alignLeft="@+id/txtFilmName"
        android:layout_alignStart="@+id/txtFilmName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Popularity:"
        android:id="@+id/txtPopularity"
        android:layout_below="@+id/txtReleaseDate"
        android:layout_alignLeft="@+id/txtReleaseDate"
        android:layout_alignStart="@+id/txtReleaseDate" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fiveStarRating"
        android:numStars="5"
        android:layout_below="@+id/txtReleaseDate"
        android:layout_toRightOf="@+id/txtPopularity"
        android:layout_toEndOf="@+id/txtPopularity" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/singleStarRating"
        android:numStars="1"
        android:layout_below="@+id/fiveStarRating"
        android:layout_alignLeft="@+id/txtPopularity"
        android:layout_alignStart="@+id/txtPopularity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtRating"
        android:layout_alignBottom="@+id/singleStarRating"
        android:layout_alignRight="@+id/fiveStarRating"
        android:layout_alignEnd="@+id/fiveStarRating"
        android:layout_alignTop="@+id/singleStarRating"
        android:layout_toRightOf="@+id/singleStarRating"
        android:layout_toEndOf="@+id/singleStarRating" />

</RelativeLayout>